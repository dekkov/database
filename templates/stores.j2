{% extends "base.j2" %}
{% block title %}: Stores{% endblock %}

{% block main_heading %}Stores{% endblock %}

{% block main_content %}

<div id="browse_stores">
    {% block data_table %}
    {% if data %}
    
    <table>
        <thead>
            <tr>
                {% for key in data[0].keys() %}
                <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                {% endfor %}

                <th>Update</th>
                <th>Delete</th>
            
            </tr>
        </thead>

        <tbody>
            {% for item in data %}
            <tr>
                {% for key in item.keys() %}
                <td>{{ item[key] }}</td>
                {% endfor %}

                <!-- Update/Delete buttons -->
                <td><a href="{{ url_for('update_stores', store_id=item.ID) }}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                <td><a href="{{ url_for('delete_stores', store_id=item.ID) }}"><i class="fa-solid fa-trash"></i></a></td>
            
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {% endif %}
    {% endblock data_table %}

    {% block table_button %}
    <p><a href="{{ url_for('add_stores') }}"><input type="button" value="Add New Store"></a></p>
    {% endblock %}

</div>

{% endblock main_content %}

{% block footer %}<br />
Store data generated with <a class="random" href="https://randomuser.me/">Random User Generator</a>.
{% endblock %}